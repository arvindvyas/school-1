%h2 Sign up

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!

  %div
    = f.label :email
    %br
    = f.email_field :email
    #suggestion
      Did you mean
      = succeed '?' do
        %a{:href => '#', 'data-action' => 'choose-suggested-email'}
          %span.address>
          @
          %span.domain>

  %div
    = f.label :name
    %br
    = f.text_field :name

  %div
    = f.label :password
    %br
    = f.password_field :password

  %div
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation

  %div
    = f.label :school_id
    %br
    - resource.school_id ||= current_school.id
    = f.select(:school_id, School.all.collect{|s| [s.name, s.id]})

  %div
    = f.label :homepage
    %br
    = f.text_field :homepage

  %div
    = f.label :students_details
    %br
    = f.text_field :students_details

  %div
    = f.label :date_of_birth
    %br
    = f.text_field :date_of_birth
  
  %div
    = f.label :gender
    %br
    = f.text_field :gender
  
  %div
    = f.label :mobile_no
    %br
    = f.text_field :mobile_no
  %div
    = f.label :address
    %br
    = f.text_field :address
  %div
    = f.label :enrolment_of_class
    %br
    = f.text_field :enrolment_of_class
  %div
    = f.label :father_or_mother
    %br
    = f.text_field :father_or_mother

  %div
    = f.label :occupation
    %br
    = f.text_field :occupation
  %div
    = f.label :qualification
    %br
    = f.text_field :qualification
  
  %div= f.submit "Sign up"

= render "devise/shared/links"
